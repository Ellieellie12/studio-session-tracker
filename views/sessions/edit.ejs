<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/sessions/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <% if (user) { %>
  <form id="new-form" action="/sessions/<%= session._id %>?_method=PUT" method="POST">
    <label for="room-select">Rooms:</label>
    <select name="room" id="room-select">
      <option value="<%= session.room %>"><%= session.room %></option>
      <option value="1">Room 1</option>
      <option value="2">Room 2</option>
      <option value="3">Room 3</option>
      <option value="4">Room 4</option>
      <option value="5">Room 5</option>
      <option value="6">Room 6</option>
      <option value="7">Room 7</option>
    </select>
    <label for="drink-select">Drinks:</label>
    <select name="drink" id="drink-select">
      <option value="<%= session.drink %>"><%= session.drink %></option>
      <option value="Bottled Water">Bottled Water</option>
      <option value="Sparkling Water">Sparkling Water</option>
      <option value="Tea">Tea</option>
      <option value="Coffee">Coffee</option>
    </select>
    <label for="snack-select">Snacks:</label>
    <select name="snack" id="snack-select">
      <option value="<%= session.snack %>"><%= session.snack %></option>
      <option value="Cookies">Cookies</option>
      <option value="Chips">Chips</option>
      <option value="Fruit Bowl">Fruit Bowl</option>
      <option value="Trail Mix">Trail Mix</option>
    </select>
    <button type="submit">Save Session</button>
  </form>
  <% } %>
</main>

<%- include('../partials/footer') %>
